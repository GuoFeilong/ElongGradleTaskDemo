<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_bank_card_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_40_dp"
            android:layout_gravity="right"
            android:background="@drawable/shape_bank_card"
            android:gravity="center_vertical"
            android:minWidth="@dimen/dimens_251_dp"
            android:paddingLeft="@dimen/dimens_12_dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/diments_17_sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_bank_crad_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1_px"
            android:background="@color/color_E0E0E0"
            android:visibility="gone" />

        <include
            android:id="@+id/include_et_type"
            layout="@layout/item_withdraw_edit_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>